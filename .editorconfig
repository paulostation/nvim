# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Lua files (common in Neovim configs)
[*.lua]
indent_style = space
indent_size = 2

# Markdown (readmes, docs, help)
[*.md]
trim_trailing_whitespace = false
max_line_length = off
indent_style = space
indent_size = 2

# JSON files (e.g., lazy-lock.json, package files)
[*.json]
indent_style = space
indent_size = 2

# TOML files (e.g., stylua.toml)
[*.toml]
indent_style = space
indent_size = 2

# YAML files (if you add any for LSP or CI)
[*.yaml]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# License files
[LICENSE]
insert_final_newline = false
trim_trailing_whitespace = false

